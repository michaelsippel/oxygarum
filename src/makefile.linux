SRCS = $(shell find -name '*.c')
OBJS = $(addsuffix .o,$(basename $(SRCS)))

INCLUDE = -I/usr/include/ -I../include
LIBDIR  = -L/usr/X11R6/lib 

CC = gcc
CFLAGS = -Wall $(INCLUDE)

all: $(OBJS) lib

%.c : %.o
	$(CC) $(CFLAGS) -o $@ $(LIBDIR) $<

lib: $(OBJS)
	ar -rcs oxygarum.a $^

clean:
	rm $(OBJS)
	rm oxygarum.a

